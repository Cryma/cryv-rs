{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "Build",
            "args": [
                "--all"
            ]
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "Run (Client)",
            "dependsOn": [
                "Build"
            ],
            "args": [
                "--package launcher"
            ]
        },
        {
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "Run (Server)",
            "dependsOn": [
                "Build"
            ],
            "args": [
                "--package server"
            ]
        }
    ]
}